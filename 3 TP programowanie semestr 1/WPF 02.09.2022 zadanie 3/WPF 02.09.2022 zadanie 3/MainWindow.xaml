<Window x:Class="WPF_02._09._2022_zadanie_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_02._09._2022_zadanie_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <!--Grid definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!--Controls-->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Item 1"/>
            <Button Content="Item 2" Margin="5 0"/>
            <Button Content="Item 3"/>
            <Button Content="Item 4" Margin="5 0"/>
            <Button Content="Item 5"/>
        </StackPanel>

        <TextBox Grid.Row="1"/>

        <TextBlock Grid.Row="2" Text="Status bar"/>

    </Grid>
</Window>
